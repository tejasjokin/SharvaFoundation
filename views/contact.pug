extends base.pug
block style
    style
      include ../static/css/home.css
      include ../static/css/contact.css
      include ../static/css/responsive.css
block  content
    div.connectbackground
        div.motto
            h2 Rebuilding Lives for Future
    div.square
        div.part-1
            h1 Contact
            form(action="/contact" method="post")
                p Name :
                input(type="text" class = 'input' name="name" id = "name" onchange = "nameValidate(event)")
                p Email :
                input(type="email" name="email" class = 'input' onchange = "mailValidate(event)")
                p Message :
                textarea(name="textmessage" class = 'input' onchange = "messageValidate(event)")
                .margin.btns
                    input(type="button",class="submit-btn", onclick = "submitValidate()" value="Confirm" id = "confirm")
                    button(type="submit",  onclick = "thanks()" class = "submit-btn submit" id = "submit" ) Submit 
        div.part-2
            h2 Head Office
            div.call
                div.fa.fa-phone
                p +91 7006616995
            div.mail
                div.fa.fa-envelope
                div foundationsharva@gmail.com
            div.address
                div.fa.fa-map-marker
                div Hno. 163 Ambika Vihar Near PHC Gole Gujral, Jammu, Jammu and Kashmir
    div
        .map_container
            .about_branch
                b.font Reach Us At
                div.maharashtra
                    h3 MAHARASHTRA
                    |+91 9168894490
                div.newdelhi 
                    h3 NEWDELHI
                    |+91 9682623276
                div.haryana 
                    h3 HARYANA
                    |+91 6005109650
                div.uttarpradesh 
                    h3 UTTARPRADESH
                    |+91 7378481056
            .map
                span.marker1
                span.marker2
                span.marker3
                span.marker4
                span.marker5
